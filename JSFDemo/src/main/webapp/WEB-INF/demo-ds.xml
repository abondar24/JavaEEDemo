<datasources xmlns="http://www.jboss.org/ironjacamar/schema"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.jboss.org/ironjacamar/schema http://docs.jboss.org/ironjacamar/schema/datasources_1_0.xsd">
    <!-- The datasource is bound into JNDI at this location. We reference
       this in META-INF/persistence.xml -->
    <datasource jndi-name="java:jboss/datasources/demo_source"
                pool-name="jsf-demo" enabled="true"
                use-java-context="true">
        <connection-url>jdbc:derby:memory:demodb;create=true</connection-url>
        <driver>org.apache.derby.jdbc.EmbeddedDriver</driver>
        <security>
            <user-name>alex</user-name>
            <password>aftermath24</password>
        </security>
    </datasource>
</datasources>